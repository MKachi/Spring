<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Mapper.UserMapper">
    <select id="select_test" resultType="User">
        select * from user
    </select>
    <update id="update_test" parameterType="User">
        update user set name=#{name} where id=#{id}
    </update>
    <delete id="delete_test_all">
        delete from user
    </delete>
    <delete id="delete_test" parameterType="int">
        delete from user where id=#{id}
    </delete>
</mapper>